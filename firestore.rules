rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down the database by default
    match /{document=**} {
      allow read, write: if false;
    }

    // User Data Rules
    // Only the authenticated user can read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Subcollections (todos, tasks)
      // Inherit access from the parent user document rule logic
      match /todos/{todoId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /tasks/{taskId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
